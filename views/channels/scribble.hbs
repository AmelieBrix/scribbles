
<div>
    <div>
      <div>
        <img src="{{scribble.ImageUrl}}" alt="{{scribble.title}}">
        <div>
          <h5>{{scribble.title}}</h5> <p>Posted by {{scribble.user.username}}</p> <img src="{{user.profilePicture}}" alt="Profile Picture" class="icon-picture">
          <p>{{scribble.description}}</p>
          <a href="#" class="like-button heart-button {{#if userHasLiked}}liked{{/if}}" data-id="{{scribble._id}}"><i class="fa fa-heart heart"></i></a>
          {{#each scribble.comments}}
            <p>{{this.content}} - <img src="{{user.profilePicture}}" alt="Profile Picture" class="icon-picture"> {{this.user.username}}</p>
            {{#ifEqual this.user.id ../currentUserId}}
              <a href="/comments/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this comment?');" class="btn btn-danger">Delete</a>
            {{/ifEqual}}
          {{/each}}
          <form action="/scribbles/{{scribble._id}}/comments" method="POST">
          <label for="content">
          <input type="text" name="content">
          </label>
          <button type="submit">submit</button>
          </form>
         {{#if isOwner}}
          <a href="/scribbles/delete/{{scribble._id}}" onclick="return confirm('Are you sure you want to delete this scribble?');" class="btn btn-danger">Delete</a>
         {{/if}}
        </div>
      </div>
    </div>

 