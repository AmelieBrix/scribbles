<h1>city vibes</h1>

    <div class="container-scribble">
        {{#each posts}}
        <div class="scribble-linker">
            <a href="/scribbles/{{this._id}}" class="scribble-linker">
                <div class="card-container">
                    <div class="card-image">
                        <img src="{{ImageUrl}}" class="card-img" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <p class="card-title">{{title}}</p>
                        <p class="card-description">{{description}}</p>
                        <div class="user-content">
                          <div>
                            <img src="{{user.profilePicture}}" class="icon-picture" alt="{{this.user.username}}'s Profile Picture">
                          </div>
                          <div>
                            <p class="username">{{this.user.username}}</p>
                          </div>
                        </div>
                        <p>Likes: <span class="likes-count">{{this.likes.length}}</span></p>
                    </div>
                </div>
            </a>
        </div>
        {{else}}
    <p>There are no movies yet!</p>
    {{/each}}
    </div>